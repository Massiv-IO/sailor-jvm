{
  "title": "SAP ByDesign",
  "description": "SAP Business ByDesign",
  "language": "java",
  "credentials": {
    "fields": {
      "serviceUrl": {
        "viewClass": "TextFieldView",
        "label": "Service URL",
        "required": "true",
        "placeholder": "Service URL"
      },
      "username": {
        "viewClass": "TextFieldView",
        "label": "Username",
        "required": true,
        "placeholder": "Username"
      },
      "password": {
        "viewClass": "TextFieldView",
        "label": "Password",
        "required": true,
        "placeholder": "Password"
      }
    }
  },
  "triggers": {
    "query_price_lists": {
      "main": "io.elastic.sap.bydesign.triggers.pricelist.QueryPriceLists",
      "title": "Query Price Lists",
      "type": "polling",
      "fields": {
        "typeCode": {
          "viewClass": "TextFieldView",
          "label": "Type Code",
          "required": false
        },
        "salesOrganisationId": {
          "viewClass": "TextFieldView",
          "label": "Sales Organisation Id",
          "required": false
        },
        "distributionChannel": {
          "viewClass": "TextFieldView",
          "label": "Distribution Channel",
          "required": false
        }
      },
      "metadata": {"out": "./salesPriceList.json"}
    },
    "query_products": {
      "main": "io.elastic.sap.bydesign.triggers.product.QueryProducts",
      "title": "Query Products",
      "type": "polling",
      "fields": {
        "shopProductType": {
          "viewClass": "SelectView",
          "label": "Product type",
          "required": false,
          "model": {
            "MASTER": "Master Products (NON SELLABLE)",
            "WOVARIANT": "Master Products (SELLABLE)",
            "VARIANT": "Variant Products"
          },
          "prompt": "Please select"
        },
        "skipSnapshot": {
          "viewClass": "CheckBoxView",
          "label": "Don't use snapshots"
        },
        "salesOrganizationID": {
          "viewClass": "TextFieldView",
          "label": "Sales organisation ID",
          "required": true
        },
        "distributionChanelCode": {
          "viewClass": "TextFieldView",
          "label": "Distribution channel code",
          "required": true
        }
      },
      "metadata": {"out": "./queryProductsIn.json"}
    }
  },
  "actions": {
    "price_list_by_id": {
      "main": "io.elastic.sap.bydesign.actions.pricelist.GetPriceListByID",
      "title": "Get PriceList By ID",
      "metadata": {
        "in": {
          "type": "object",
          "properties": {
            "ID": {
              "type": "string",
              "title": "ID",
              "required": true
            }
          }
        },
        "out": "./priceListPriceSpecifications.json"
      }
    },
    "create_customer": {
      "main": "io.elastic.sap.bydesign.actions.customer.CreateCustomer",
      "title": "Create Customer",
      "metadata": {
        "in": "./createCustomerIn.json",
        "out": "./createCustomerOut.json"
      }
    },
    "update_customer": {
      "main": "io.elastic.sap.bydesign.actions.customer.UpdateCustomer",
      "title": "Update Customer",
      "metadata": {
        "in": "./updateCustomerIn.json",
        "out": "./createCustomerOut.json"
      }
    },
    "availability_determination": {
      "main": "io.elastic.sap.bydesign.actions.product.AvailabilityDeterminationById",
      "title": "Get Stock Data by Product ID",
      "metadata": {
        "in": "./availabilityDeterminationByIdIn.json",
        "out": "./availabilityDeterminationByIdOut.json"
      }
    },
    "create_order": {
      "main": "io.elastic.sap.bydesign.actions.order.CreateOrderAndUpdatePrices",
      "title": "Create Order",
      "metadata": {
        "in": "./createOrderIn.json",
        "out": "./createOrderOut.json"
      }
    },
    "set_order_payment": {
      "main": "io.elastic.sap.bydesign.actions.order.SetOrderPayment",
      "title": "Set Order Payment Info",
      "metadata": {
        "in": {
          "type": "object",
          "properties": {
            "OrderID": {
              "type": "string",
              "title": "Order ID",
              "required": true
            },
            "BuyerID": {
              "type": "string",
              "title": "Buyer ID",
              "required": true
            },
            "CashDiscountTermsCode": {
              "type": "string",
              "title": "Cash Discount Terms Code",
              "required": true
            }
          }
        },
        "out": {
          "type": "object",
          "properties": {
            "OrderID": {
              "type": "string",
              "title": "Order ID",
              "required": true
            }
          }
        }
      }
    }
  }
}